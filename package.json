{
	"name": "jarse",
	"version": "1.0.2",
	"description": "Parse json without the errors",
	"license": "MIT",
	"repository": "George-Aidonidis/jarse",
	"author": {
		"name": "George Aidonidis",
		"email": "george.aidonidis@gmail.com",
		"url": "https://georgeaidonidis.com"
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"lint": "xo",
		"test": "jest",
		"codecov": "codecov"
	},
	"files": [
		"index.js"
	],
	"keywords": [
		"json",
		"parse",
		"json-parse"
	],
	"devDependencies": {
		"codecov": "^3.2.0",
		"husky": "^1.3.1",
		"jest": "^24",
		"lint-staged": "^8.1.4",
		"xo": "^0.24.0"
	},
	"jest": {
		"coverageDirectory": "./coverage/",
		"collectCoverage": true
	},
	"lint-staged": {
		"*": [
			"xo --fix",
			"git add"
		]
	},
	"xo": {
		"prettier": true,
		"envs": [
			"jest",
			"node",
			"browser"
		],
		"rules": {
			"camelcase": 1
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn test"
		}
	}
}
